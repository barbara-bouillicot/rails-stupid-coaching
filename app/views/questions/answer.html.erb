<div class="container">
  <div class="wrapper-question d-flex">
    <div id=bar></div>
    <div class="question-container">
      <p class="pt-3"><%= @question %></p>
      <p class="my-3"><em><%= "-You" %></em></p>
    </div>
  </div>

  <div class="wrapper-answer d-flex">
  <div id=bar></div>
    <div class="answer-container" >
      <p class="pt-3"><%= @answer%></p>
      <p class="my-3"><em><%= "-Your coach" %></em></p>
    </div>
  </div>
    <p id="link"><%= link_to "Ask a new question", ask_path %></p>
</div>
